<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:layout_marginBottom="@dimen/activity_vertical_margin">

  <TextView
    android:id="@+id/match_item_title"
    android:textStyle="bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:singleLine="true"
    android:text="@string/placeholder"
    android:textSize="18sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/match_item_delete"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/match_item_date"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="@dimen/default_view_margin"
    android:layout_marginEnd="@dimen/default_view_margin"
    android:layout_marginBottom="@dimen/default_view_margin"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/match_item_title"
    android:text="@string/placeholder"
    android:textColor="@color/colorAccent"/>
  <TextView
    android:id="@+id/match_item_score"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/default_view_margin"
    android:layout_marginTop="@dimen/default_view_margin"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="@dimen/default_view_margin"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/match_item_status"
    app:layout_constraintTop_toBottomOf="@+id/match_item_title"
    android:text="@string/placeholder"
    android:textColor="@color/colorAccent"/>
  <TextView
    android:id="@+id/match_item_status"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/default_view_margin"
    android:layout_marginTop="@dimen/default_view_margin"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="@dimen/default_view_margin"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/match_item_delete"
    app:layout_constraintTop_toBottomOf="@+id/match_item_title"
    android:text="@string/placeholder"
    android:textColor="@color/colorAccent"/>
  <net.frostedbytes.android.trendfeeder.views.TouchableImageView
    android:id="@+id/match_item_delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_delete_dark"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/match_item_title"/>

</android.support.constraint.ConstraintLayout>
